<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/components.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/pages/news.css" />
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="container">
    <div class="page-header">
      <h1 class="auth-title">Haberler</h1>
      <% 
        const userRoles = (typeof user !== 'undefined' && user)
          ? (Array.isArray(user.roles) ? user.roles : (user.roles ? [user.roles] : []))
          : [];
        const canCreateNews = userRoles.includes('admin') || userRoles.includes('author');
      %>
      <% if (canCreateNews) { %>
        <a class="btn" href="/news/new">Yeni Haber</a>
      <% } %>
    </div>

    <% if (!news || !news.length) { %>
      <p class="muted">Henüz haber yok.</p>
    <% } else { %>
      <div class="blog-grid">
        <% news.forEach(function(n){ %>
          <article class="card blog-card">
            <a class="card-link" href="/news/<%= n._id %>">
              <div class="cover-wrapper">
                <% if (n.imageUrl) { %>
                  <img class="blog-cover" src="<%= n.imageUrl %>" alt="<%= n.title %> görsel" />
                <% } else { %>
                  <div class="blog-cover blog-cover-placeholder"></div>
                <% } %>
                <div class="preview-overlay">
                  <p class="preview-text"><%= n.excerpt %></p>
                </div>
              </div>
              <div class="card-body">
                <h2 class="card-title"><%= n.title %></h2>
                <p class="muted">
                  Kategori: <%= n.category?.name || 'Belirtilmemiş' %> ·
                  Yazar: <%= n.author?.name || 'Anonim' %>
                </p>
              </div>
            </a>
          </article>
        <% }) %>
      </div>

      <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <%- include('../partials/navigationButton', { currentPage, totalPages, paginationPath: '/news' }) %>
      <% } %>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>