<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/components.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/pages/news.css" />
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="container">
    <div class="page-header">
      <h1 class="auth-title">Haberler</h1>
      <% 
        const userRoles = (typeof user !== 'undefined' && user)
          ? (Array.isArray(user.roles) ? user.roles : (user.roles ? [user.roles] : []))
          : [];
        const canCreateNews = userRoles.includes('admin') || userRoles.includes('author');
      %>
      <% if (canCreateNews) { %>
        <a class="btn" href="/news/new">Yeni Haber</a>
      <% } %>
    </div>

    <% if (!news || !news.length) { %>
      <p class="muted">Henüz haber yok.</p>
    <% } else { %>
      <div class="blog-grid">
        <% news.forEach(function(n){ %>
          <article class="card blog-card">
            <% if (n.imageUrl) { %>
              <img class="blog-cover" src="<%= n.imageUrl %>" alt="<%= n.title %> görsel" />
            <% } %>
            <div class="card-body">
              <h2 class="card-title"><a href="/news/<%= n._id %>"><%= n.title %></a></h2>
              <p class="muted">
                Kategori: <%= n.category?.name || 'Belirtilmemiş' %> ·
                Yazar: <%= n.author?.name || 'Anonim' %>
              </p>
              <a class="btn" href="/news/<%= n._id %>">Görüntüle</a>
            </div>
          </article>
        <% }) %>
      </div>

      <!-- Sayfalama -->
      <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <nav class="pagination" aria-label="Sayfalama">
          <ul class="pagination-list">
            <li>
              <% if (currentPage > 1) { %>
                <a class="btn outline" href="/news?page=<%= currentPage - 1 %>">Önceki</a>
              <% } else { %>
                <span class="btn outline disabled">Önceki</span>
              <% } %>
            </li>
            <li class="pages">
              <% for (let p = 1; p <= totalPages; p++) { %>
                <% if (p === currentPage) { %>
                  <span class="page-number active"><%= p %></span>
                <% } else { %>
                  <a class="page-number" href="/news?page=<%= p %>"><%= p %></a>
                <% } %>
              <% } %>
            </li>
            <li>
              <% if (currentPage < totalPages) { %>
                <a class="btn outline" href="/news?page=<%= currentPage + 1 %>">Sonraki</a>
              <% } else { %>
                <span class="btn outline disabled">Sonraki</span>
              <% } %>
            </li>
          </ul>
        </nav>
      <% } %>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>