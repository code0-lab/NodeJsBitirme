<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/components.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/pages/blog.css" />
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="container">
    <div class="page-header">
      <h1 class="auth-title">Blog Yazıları</h1>
      <a class="btn" href="/blogs/new">Yeni Yazı</a>
    </div>

    <% if (!blogs || !blogs.length) { %>
      <p class="muted">Henüz blog yazısı yok.</p>
    <% } else { %>
      <div class="blog-grid">
        <% blogs.forEach(function(b){ %>
          <article class="card blog-card">
            <a class="card-link" href="/blogs/<%= b._id %>">
              <div class="cover-wrapper">
                <% if (b.coverImageUrl) { %>
                  <img class="blog-cover" src="<%= b.coverImageUrl %>" alt="<%= b.title %> kapak" />
                <% } else { %>
                  <div class="blog-cover blog-cover-placeholder"></div>
                <% } %>
                <div class="preview-overlay">
                  <p class="preview-text"><%= b.excerpt %></p>
                </div>
              </div>
              <div class="card-body">
                <h2 class="card-title"><%= b.title %></h2>
                <p class="muted">Yazar: <%= b.author?.name || 'Anonim' %></p>
                <!-- Görüntüle butonu kaldırıldı -->
              </div>
            </a>
          </article>
        <% }) %>
      </div>

      <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <%- include('../partials/navigationButton', { currentPage, totalPages, paginationPath: '/blogs' }) %>
      <% } %>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>